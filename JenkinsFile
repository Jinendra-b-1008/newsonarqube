pipeline {
    agent any

    environment {
        BRANCh = 'master'
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: "${BRANCh}", url: 'https://github.com/Jinendra-b-1008/war-web-project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage("SonarQube analysis"){ 
		    environment{
			    scannerHome = tool 'Sonar-Scanner'
		    }
		    steps {
			withSonarQubeEnv('sonarqube-server'){
				sh "${scannerHome}/bin/sonar-scanner"
			  } 
			}
	    }
    }
}
